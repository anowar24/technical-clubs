---
title: Gallery
layout: layouts/base.njk
permalink: /gallery/
eleventyNavigation:
  key: Gallery
  order: 5
---
<section class="overflow-hidden text-gray-700 ">
  <div class="container px-5 py-2 mx-auto lg:pt-12 lg:px-32">
    <div class="flex flex-wrap -m-1 md:-m-2">
             {% for item in media.gallery %}
      <div class="flex flex-wrap w-1/3">
        <div class="w-full p-1 md:p-2">
          <img alt={{item.alttext}} class="block object-cover object-center w-full h-full rounded-lg"
            src={{item.src}}>
        </div>
      </div>
{% endfor %}
     
    </div>
  </div>
</section>



<section class="text-gray-600 body-font">
  <div class="container px-5 py-24 mx-auto">
    <div class="flex flex-col text-center w-full mb-20">
      <h1 class="sm:text-3xl text-2xl font-medium title-font mb-4 text-gray-900">Gallery</h1>
    </div>
    <div class="flex flex-wrap -m-4">

       {% for item in media.gallery %}
      <div class="lg:w-1/3 w-1/2 p-4">
        <a href="#">
            <div class="flex relative">
                <img alt="gallery" class="absolute inset-0 w-full h-full object-cover object-center" src={{item.src}}>
                <div class="px-8 py-10 relative z-10 w-full border-4 border-gray-200 bg-gray-100 opacity-0 hover:opacity-70">
                    <h2 class="tracking-widest text-sm title-font font-medium text-gray-800 mb-1">{{item.subtitle}}</h2>
                    <h1 class="title-font text-lg font-bold text-gray-800 hover:text-indigo-100 mb-3">{{item.title}}</h1>
                    <p class="leading-relaxed text-gray-800">{{item.content}}</p>
                </div>
            </div>
        </a>
      </div>
{% endfor %}
      
     
      
  </div>
</section>